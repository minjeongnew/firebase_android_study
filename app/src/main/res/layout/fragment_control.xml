<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".FragmentControl">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_margin="10dp">
            <TextView

                android:id="@+id/textView"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="칼로리 : "
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_toRightOf="@id/textView"
                android:id="@+id/textViewCalorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />

            <SeekBar
                android:max="1000"
                android:layout_below="@id/textView"
                android:id="@+id/seekBarCalorie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" /></RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_margin="10dp">
            <TextView
                android:layout_marginBottom="10dp"
                android:id="@+id/textView2"

                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="지방 : " />

            <TextView
                android:id="@+id/textViewFat"
                android:layout_width="50dp"
                android:layout_toRightOf="@id/textView2"
                android:layout_height="wrap_content"
                android:text="0" />

            <SeekBar
                android:id="@+id/seekBarFat"
                android:layout_below="@+id/textView2"
                android:max="100"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" /></RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_margin="10dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="당류 : " />
            <TextView
                android:layout_marginBottom="10dp"
                android:id="@+id/textViewSugar"
                android:layout_toRightOf="@id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />

            <SeekBar
                android:layout_below="@+id/textView3"
                android:id="@+id/seekBarSugar"
                android:max="100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" /></RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_margin="10dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="카페인 : " />
            <TextView
                android:layout_toRightOf="@id/textView4"
                android:id="@+id/textViewCaffeine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />

            <SeekBar
                android:layout_below="@+id/textView4"
                android:id="@+id/seekBarCaffeine"
                android:max="400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" /></RelativeLayout>

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/buttonSaveControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장"
            android:background="#ffffff"/>
    </LinearLayout>

</LinearLayout>